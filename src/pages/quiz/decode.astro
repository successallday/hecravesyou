<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Decode His Desire</title>

  <style>
    :root {
      --pink:#e63973;
      --pink-dark:#b1124c;
      --yes:#1e4bb8;
      --yes-shadow:#122d6d;
      --no:#e63973;
      --no-shadow:#8b2449;
      --hero-max:900px;
      --quiz-max:760px;
    }

    body {
      margin:0;
      font-family:"Georgia",serif;
      color:#fff;
      background:url("/images/sunset.jpg") no-repeat center center fixed;
      background-size:cover;
    }

    .overlay {
      background:rgba(0,0,0,.6);
      min-height:100vh;
      display:flex;
      flex-direction:column;
      align-items:center;
      padding-bottom:60px;
    }

    .top-box {
      width:100%;
      max-width:var(--hero-max);
      margin:40px auto 0;
      background:#000;
      border-radius:6px;
      box-shadow:0 2px 10px rgba(0,0,0,.6);
      overflow:hidden;
      display:grid;
      grid-template-columns:1fr 1fr;
      grid-template-rows:auto auto;
    }

    .top-title {
      grid-column:2;
      padding:26px 30px 10px;
      font-size:28px;
    }

    .top-copy {
      grid-column:2;
      padding:0 30px 28px;
    }

    .top-copy p {
      color:#ddd;
      font-size:17px;
      line-height:1.55;
      margin:8px 0;
    }

    .top-image {
      grid-column:1;
      grid-row:1 / span 2;
      width:100%;
      height:100%;
      object-fit:cover;
      display:block;
    }

    .underline {
      height:5px;
      width:100%;
      max-width:var(--hero-max);
      background:var(--pink);
    }

    .triangle {
      width:0;
      height:0;
      border-left:60px solid transparent;
      border-right:60px solid transparent;
      border-top:35px solid var(--pink-dark);
      margin-top:-1px;
    }

    .quiz-box {
      background:#111;
      width:90%;
      max-width:var(--quiz-max);
      margin-top:0;
      border-radius:8px;
      box-shadow:0 4px 15px rgba(0,0,0,.5);
      text-align:center;
      padding:50px 30px;
      position:relative;
      transition:opacity .9s ease;
      opacity:1;
    }

    .quiz-box.fade-out { opacity:0; }
    .quiz-box.fade-in { opacity:1; }

    .quiz-box h2 {
      margin:0 0 22px;
    }

    .quiz-box p {
      font-size:18px;
      line-height:1.55;
      margin:0 0 26px;
    }

    .button-row {
      display:flex;
      justify-content:center;
      gap:18px;
      flex-wrap:nowrap;
    }

    .button-row button {
      flex:1 1 45%;
      max-width:200px;
      padding:18px;
      border:0;
      border-radius:12px;
      font-size:20px;
      font-weight:bold;
      color:#fff;
      cursor:pointer;
      transition:transform .15s ease,opacity .15s ease;
    }

    .button-row button:hover {
      transform:scale(1.05);
      opacity:.95;
    }

    .yes-btn { background:var(--yes); box-shadow:0 4px var(--yes-shadow); }
    .no-btn  { background:var(--no);  box-shadow:0 4px var(--no-shadow); }

    footer {
      background:#000;
      color:#999;
      font-size:13px;
      text-align:center;
      padding:35px 10px 45px;
      width:100%;
      margin-top:40px;
      border-top:1px solid #222;
      line-height:1.5;
    }

    footer a { color:var(--pink); text-decoration:none; }
    footer a:hover { text-decoration:underline; }

    /* ðŸ”¥ MOBILE â€” LOCKED & SAFE */
    @media (max-width:768px){
      .top-box {
        grid-template-columns:1fr;
        grid-template-rows:auto auto auto;
        border-radius:0;
        margin:0;
      }

      .top-title {
        grid-column:1;
        font-size:22px;
        padding:20px 16px 8px;
      }

      .top-image {
        grid-column:1;
        grid-row:2;
        height:220px;
      }

      .top-copy {
        grid-column:1;
        padding:10px 16px 16px;
      }

      .quiz-box {
        width:95%;
        padding:35px 20px 50px;
      }
    }
  </style>
</head>

<body>
<div class="overlay">

  <section class="top-box">
    <h1 class="top-title">Decode His Desire</h1>
    <img class="top-image" src="/images/valentines.jpg" alt="Couple">
    <div class="top-copy">
      <p>Every man speaks desire in a secret language.</p>
      <p>Answer honestly â€” each question reveals more.</p>
    </div>
  </section>

  <div class="underline"></div>
  <div class="triangle"></div>

  <div id="quiz" class="quiz-box"></div>

  <footer>
    Â© 2025 He Craves You â€¢
    <a href="/privacy">Privacy</a> â€¢
    <a href="/terms">Terms</a> â€¢
    <a href="/contact">Contact</a>
  </footer>
</div>

<script is:inline>
  const questions = [
    "Do you feel like he pulls away when you get closer?",
    "Do you wonder if he feels as deeply as you do?",
    "Does he go silent after being affectionate?",
    "Do you replay his words for hidden meaning?",
    "Ready to decode his desire?"
  ];

  let step = 0;
  const box = document.getElementById("quiz");

  function renderQuestion() {
    box.classList.remove("fade-in");
    box.classList.add("fade-out");

    setTimeout(() => {
      if (step < questions.length) {
        box.innerHTML = `
          <h2>Question ${step + 1} of ${questions.length}</h2>
          <p>${questions[step]}</p>
          <div class="button-row">
            <button class="yes-btn">YES</button>
            <button class="no-btn">NO</button>
          </div>
        `;
      } else {
        box.innerHTML = "<h2>Results unlocked.</h2>";
      }

      box.classList.remove("fade-out");
      box.classList.add("fade-in");
    }, 500);
  }

  document.addEventListener("click", e => {
    if (e.target.classList.contains("yes-btn") || e.target.classList.contains("no-btn")) {
      step++;
      renderQuestion();
    }
  });

  window.addEventListener("load", renderQuestion);
</script>

</body>
</html>
