---
/* no frontmatter logic needed */
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Decode His Desire</title>

  <style>
    :root {
      --pink:#e63973;
      --pink-dark:#b1124c;
      --yes:#1e4bb8;
      --yes-shadow:#122d6d;
      --no:#e63973;
      --no-shadow:#8b2449;
      --hero-max:900px;
      --quiz-max:760px;
    }

    body {
      margin:0;
      font-family:"Georgia",serif;
      color:#fff;
      background:url("/images/sunset.jpg") no-repeat center center fixed;
      background-size:cover;
    }

    .overlay {
      background:rgba(0,0,0,.6);
      min-height:100vh;
      display:flex;
      flex-direction:column;
      align-items:center;
      padding-bottom:60px;
    }

    .top-box {
      width:100%;
      max-width:var(--hero-max);
      margin:40px auto 0;
      background:#000;
      border-radius:6px;
      box-shadow:0 2px 10px rgba(0,0,0,.6);
      display:grid;
      grid-template-columns:1fr 1fr;
      overflow:hidden;
    }

    .top-title {
      grid-column:2;
      padding:26px 30px 10px;
      font-size:28px;
    }

    .top-copy {
      grid-column:2;
      padding:0 30px 28px;
    }

    .top-image {
      grid-column:1;
      grid-row:1 / span 2;
      width:100%;
      height:100%;
      object-fit:cover;
    }

    .underline {
      height:5px;
      width:100%;
      max-width:var(--hero-max);
      background:var(--pink);
    }

    .triangle {
      width:0;height:0;
      border-left:60px solid transparent;
      border-right:60px solid transparent;
      border-top:35px solid var(--pink-dark);
    }

    .quiz-box {
      background:#111;
      width:90%;
      max-width:var(--quiz-max);
      border-radius:8px;
      padding:50px 30px;
      text-align:center;
      transition:opacity 1.4s ease;
      opacity:1;
      margin-top:0;
    }

    .quiz-box.fade-out { opacity:0; }
    .quiz-box.fade-in { opacity:1; }

    .button-row {
      display:flex;
      gap:18px;
      justify-content:center;
      margin-top:20px;
    }

    .button-row button {
      flex:1;
      max-width:220px;
      min-height:64px;
      padding:18px;
      border-radius:14px;
      border:0;
      font-size:20px;
      font-weight:bold;
      cursor:pointer;
      color:#fff;
      transition:transform .2s ease;
    }

    .button-row button:hover {
      transform:scale(1.04);
    }

    .yes-btn { background:var(--yes); box-shadow:0 4px var(--yes-shadow); }
    .no-btn  { background:var(--no);  box-shadow:0 4px var(--no-shadow); }

    footer {
      background:#000;
      color:#999;
      font-size:13px;
      text-align:center;
      padding:35px 10px 45px;
      width:100%;
      margin-top:40px;
      border-top:1px solid #222;
    }

    @media (max-width:768px){
      .top-box {
        grid-template-columns:1fr;
        margin:0;
        border-radius:0;
      }

      .top-title {
        font-size:22px;
        padding:20px 16px 8px;
      }

      .top-image {
        height:220px;
      }

      .top-copy {
        padding:10px 16px 16px;
      }

      .quiz-box {
        width:95%;
        padding:35px 20px 45px;
      }

      .button-row {
        flex-direction:column;
      }

      .button-row button {
        max-width:none;
        width:100%;
      }
    }
  </style>
</head>

<div class="overlay">
  <section class="top-box">
    <h1 class="top-title">Decode His Desire</h1>
    <img class="top-image" src="/images/valentines.jpg" alt="">
    <div class="top-copy">
      <p>Every man speaks desire in a secret language.</p>
      <p>Answer honestly — each question reveals more.</p>
    </div>
  </section>

  <div class="underline"></div>
  <div class="triangle"></div>

  <div id="quiz" class="quiz-box"></div>

  <footer>
    © 2025 He Craves You •
    <a href="/privacy">Privacy</a> •
    <a href="/terms">Terms</a> •
    <a href="/contact">Contact</a>
  </footer>
</div>

<script is:inline>
  const questions = [
    "Do you feel like he pulls away when you get closer?",
    "Do you ever wonder if he feels as deeply as you do?",
    "Does he go silent after being affectionate?",
    "Do you replay his words trying to find the meaning?",
    "Does his attention come in waves — hot then cold?",
    "Ready to decode his desire?"
  ];

  let step = 0;
  let score = 0;

  const box = document.getElementById("quiz");

  function renderQuestion() {
    box.classList.add("fade-out");

    setTimeout(() => {
      if (step < questions.length) {
        box.innerHTML = `
          <h2>Question ${step + 1} of ${questions.length}</h2>
          <p>${questions[step]}</p>
          <div class="button-row">
            <button class="yes-btn">YES</button>
            <button class="no-btn">NO</button>
          </div>
        `;
      } else {
        box.innerHTML = `
          <h2>Done</h2>
          <p>You answered YES ${score} times.</p>
        `;
      }

      box.classList.remove("fade-out");
      box.classList.add("fade-in");
    }, 900);
  }

  document.addEventListener("click", e => {
    if (e.target.classList.contains("yes-btn")) {
      score++;
      step++;
      renderQuestion();
    }
    if (e.target.classList.contains("no-btn")) {
      step++;
      renderQuestion();
    }
  });

  window.addEventListener("load", renderQuestion);
</script>
