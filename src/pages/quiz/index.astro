<script is:inline>
const questions = [
  "Have you been emotionally invested in him for a while now?",
  "When you pull back a little, does he chase you or disappear?",
  "When you stop trying, does he step up or fade out?",
  "Are you wanting something real and long-term?"
];

let step = 0;

function renderQuestion() {
  const box = document.getElementById("quiz");
  if (!box) return;

  if (step < questions.length) {
    box.innerHTML = `
      <h2>Question ${step + 1} of 4</h2>
      <p>${questions[step]}</p>
      <div class="button-row">
        <button class="yes-btn">YES</button>
        <button class="no-btn">NO</button>
      </div>
    `;
  } else {
    box.innerHTML = `
      <h2>Congratulations</h2>
      <p>You’ve seen how men think.</p>
      <button class="cta-btn">SHOW ME THE VIDEO</button>
    `;
  }
}

document.addEventListener("click", e => {
  if (e.target.matches(".yes-btn,.no-btn")) {
    step++;
    renderQuestion();
    if (!window.leadTracked) {
      fbq('track', 'Lead');
      window.leadTracked = true;
    }
  }

  if (e.target.matches(".cta-btn")) {
    fbq('track', 'Purchase');
    window.location.href =
      "https://hop.clickbank.net/?affiliate=jake8099&vendor=hissecret&lp=0";
  }
});

window.onload = renderQuestion;
</script>
